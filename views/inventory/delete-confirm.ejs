<div>
    <% if (title) { %>
      <h1 id="login_form"><%= title %></h1>
      <% } else {
      res.redirect('/')
    } %>
  
    <%- messages() %>
  
    <% if (errors) { %>
      <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <%  }) %>
      </ul>
    <% } %>


    <form id="deleteInventory" class ="login_box" action="/inv/delete" method="post">
    
        <h2>Please Confirm Deletion: Note this delete is permanent.</h2>

        <label for="edit_make">Make</label>
        <input type="text" id="edit_make" name="inv_make" readonly value="<%= locals.inv_make %>">
    
        <label for="edit_model">Model</label>
        <input type="text" id="edit_model" name="inv_model" readonly value="<%= locals.inv_model %>">

        <label for="edit_year">Year</label>
        <input type="text" id="edit_year" name="inv_year" readonly required value="<%= locals.inv_year %>">

        <label for="edit_price">Price</label>
        <input type="text" id="edit_price" name="inv_price" readonly required value="<%= locals.inv_price %>">
    
    
        <button type="submit" class="btnD">Delete Vehicle Datails</button>
        
        <input type="hidden" name="inv_id"
        <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
        <% } %>>    


    </form>


    <div class="links">
        <p><a href="../../inv">Back to Menu</a></p>
    </div>

</div>

