<div>

    <% if (title) { %>
      <h1 id="login_form"><%= title %></h1>
      <% } else {
      res.redirect('/')
    } %>
  
    <%- messages() %>
  
    <% if (errors) { %>
      <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <%  }) %>
      </ul>
    <% } %>


<div id="login_box">
  
  <% const account_type = locals.accountData.account_type; %>
  <% if (account_type === 'Client') { %>
    <h2>Welcome, <%= locals.accountData.account_firstname %>! You are now logged in.</h2>
    <h3>Update Account Information</h3>
    <p><a href="/account/update-user">Edit account info</a></p>
  <% } 
  else if (account_type === 'Admin' || account_type === 'Employee') { %>
    <h2>Welcome, <%= locals.accountData.account_firstname %>! You are now logged in.</h2>
    <h3><a href="/inv">Inventory Management</a></h3>
    
    <h3>update account information</h3>
    <p><a href="/account/update-user">Edit account info</a></p>
  <% } %>

</div>
  